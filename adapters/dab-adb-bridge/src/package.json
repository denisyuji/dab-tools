{
  "name": "dab-adb-bridge",
  "version": "1.0.0",
  "description": "Adapter to translate DAB requests to ADB commands for Android devices",
  "main": "index.js",
  "scripts": {
    "start": "npm run compile && node dist/index.js",
    "compile": "tsc",
    "test:e2e": "npm run compile && node dist/dab_scenario.test.js",
    "test": "jest --passWithNoTests && npm run format && npm run lint",
    "test-w": "jest --passWithNoTests  --watch --no-coverage",
    "format": "prettier --list-different \"{index,lib/**/*,tst/**/*}.{ts,tsx,js,json}\"",
    "format:fix": "prettier --write \"{index,lib/**/*,tst/**/*}.{ts,tsx,js,json}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/device-access-bus/dab-adb-bridge.git"
  },
  "keywords": [
    "nodejs"
  ],
  "author": "",
  "license": "SEE LICENSE IN ./LICENSE",
  "bugs": {
    "url": "https://github.com/device-access-bus/dab-adb-bridge/issues"
  },
  "homepage": "https://github.com/device-access-bus/dab-adb-bridge#readme",
  "dependencies": {
    "@types/bunyan": "^1.8.8",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.5.3",
    "async-mqtt": "^2.6.1",
    "bunyan": "^1.8.15",
    "config": "^3.3.3",
    "eventemitter2": "^6.4.3",
    "promisify-child-process": "^4.1.1",
    "serialize-error": "^8.0.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/config": "^3.3.0",
    "@types/jest": "^29.2.1",
    "@types/node": "^16.11.56",
    "eslint-config-prettier": "^7.2.0",
    "jest": "^29.2.2",
    "prettier": "^2.7.1",
    "typescript": "^4.8.2"
  }
}
